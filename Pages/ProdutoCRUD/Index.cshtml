@page
@model PI.Pages.ProdutoCRUD.IndexModel
@{
    ViewData["Title"] = "Lista de Produtos";
}

<h1>Produtos</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Novo Produto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Produtos[0].Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Produtos[0].Preco)</th>
            <th>@Html.DisplayNameFor(model => model.Produtos[0].EmEstoque)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Produtos)
        {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Preco.ToString("C")</td>
            <td>@(item.EmEstoque ? "Sim" : "Não")</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
            </td>
        </tr>
        }
    </tbody>
</table>