@page
@model PI.Pages.ProdutoCRUD.DeleteModel
@{
    ViewData["Title"] = "Excluir Produto";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir este produto?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.EmEstoque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.EmEstoque)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Produto.Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>